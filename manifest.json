{
  "manifest_version": 3,
  "name": "Smart Japanese Lookup",
  "version": "1.0",
  "description": "Select Japanese text to add on Anki, search on Jisho.org, and Ask AI!",
  "permissions": ["contextMenus", "tabs", "storage", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "default.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
